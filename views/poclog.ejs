<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
    <title>
      POCLOG
    </title>

    <!-- Custom styles for this template -->
    <link href="/assets/starter-template.css" rel="stylesheet">
  </head>
  <body>
    <% include partials/menu.ejs %>
    <div class="container-fluid">
      <div class="col-12">
        <div class="row">
        <table class="table table-striped table bordered table-hover table-condensed">
          <thead>
            <tr>
              <th>Station</th>
              <th>RIC</th>
              <th>Message</th>
              <th>Date / Time</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i=0; i<results.length; i++){ %>
              <tr>
                <td><%= results[i].name %></td>
                <td><%= results[i].ric %></td>
                <td><%= results[i].message %></td>
                <td><%= results[i].date %> <%= results[i].time %></td>
                <td><a href="/destroy?strfield=_id&strvalue=<%= results[i]._id %>"><button type="button" class="btn btn-outline-danger">Delete</button></a></td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div> <!-- row -->
      </div><!-- col -->
    </div><!-- /.container -->
    <% include partials/bootstrap_body.ejs %>
  </body>
</html>
